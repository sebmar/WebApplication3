@model WebApplication3.Models.Student

@{
    ViewBag.Title = "Details";
}


<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nazwisko
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Imię
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstMidName)
        </dd>
        <dd>
            <table class="table">
                <tr> <th>Przedmiot</th> <th>Ocena</th> </tr> @foreach (var item in Model.Enrollments)
                {
                    <tr> <td> @Html.DisplayFor(modelItem => item.Course.Title) </td> <td> @Html.DisplayFor(modelItem => item.Grade) </td> </tr> }
            </table>
        </dd>

    </dl>
</div>
<p>
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID })
    }
    @Html.ActionLink("Wstecz", "Index")
</p>
